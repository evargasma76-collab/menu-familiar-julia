    const comidasFamilia = {
      base: [
        "Ensalada de quinoa con pollo",
        "SalmÃ³n al horno con verduras asadas",
        "Paella mixta con verduras",
        "Pollo al curry con arroz integral",
        "Tacos de ternera con aguacate"
