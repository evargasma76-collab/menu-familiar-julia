    let currentWeekIndex = 0;
    const weeks = ["3-7", "10-14", "17-21", "24-28"];
    const weekTitles = [
      "Semana 1 (3â€“7 Nov)",
      "Semana 2 (10â€“14 Nov)",
      "Semana 3 (17â€“21 Nov)",
      "Semana 4 (24â€“28 Nov)"
    ];

    function renderWeek() {
      const weekKey = weeks[currentWeekIndex];
      const menu = menusJulia[weekKey];
      const container = document.getElementById("menuContainer");
      const weekTitle = document.getElementById("weekTitle");
      weekTitle.textContent = weekTitles[currentWeekIndex];
      container.innerHTML = "";

      Object.entries(menu).forEach(([dia, comida], i) => {
        const comidaFamilia = comidasFamilia.base[i % comidasFamilia.base.length];
        const cenaFamilia = comidasFamilia.cenas[i % comidasFamilia.cenas.length];

        const noRepetido = !comidaFamilia.toLowerCase().includes(comida.split(",")[0].split(" ")[0].toLowerCase())
          ? comidaFamilia
          : comidasFamilia.base[(i + 2) % comidasFamilia.base.length];

        const card = document.createElement("div");
        card.className = "bg-white rounded-2xl shadow-lg p-4 border border-gray-200 hover:shadow-2xl transition";
        card.innerHTML = `
          <h3 class="text-xl font-bold text-blue-600 mb-2">${dia}</h3>
          <div class="mb-3">
            <h4 class="font-semibold text-gray-700">ğŸ MenÃº de Julia (Colegio)</h4>
            <p class="text-sm text-gray-600">${comida}</p>
          </div>
          <div class="mb-3">
            <h4 class="font-semibold text-gray-700">ğŸ  Comida Familiar</h4>
            <p class="text-sm text-gray-600">${noRepetido}</p>
          </div>
          <div>
            <h4 class="font-semibold text-gray-700">ğŸŒ™ Cena Familiar</h4>
            <p class="text-sm text-gray-600">${cenaFamilia}</p>
          </div>
        `;
        container.appendChild(card);
      });
    }

    document.getElementById("prevWeek").addEventListener("click", () => {
      if (currentWeekIndex > 0) {
        currentWeekIndex--;
        renderWeek();
      }
    });

    document.getElementById("nextWeek").addEventListener("click", () => {
      if (currentWeekIndex < weeks.length - 1) {
        currentWeekIndex++;
        renderWeek();
      }
    });

    renderWeek();
